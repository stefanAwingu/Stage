{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "storageAccountName": {
      "defaultValue": "pythondeploy",
      "type": "string"
    },
    "adminUsername": {
      "defaultValue": "azure",
      "type": "string"
    },
    "adminPassword": {
      "defaultValue": "S3rv3r123",
      "type": "string"
    },
    "vmSize": {
      "defaultValue": "Standard_A2",
      "type": "string"
    },
    "existingVirtualNetworkResourceGroup": {
      "type": "string",
      "defaultValue": "qazureng",
      "metadata": {
        "description": "Name of the existing VNET resource group"
      }
    },
    "existingVirtualNetworkName": {
      "type": "string",
      "defaultValue": "qazureng",
      "metadata": {
        "description": "Name of the existing VNET"
      }
    },
    "subnetName": {
      "type": "string",
      "defaultValue": "azure-python",
      "metadata": {
        "description": "Name of the subnet in the virtual network you want to use"
      }
    },
    "vmName":{
      "type": "string",
      "defaultValue": "TestPythonDeploy"
    },
    "location": {
      "type": "string",
      "defaultValue": "West Europe"
    }
  },
  "variables": {
    "nic1NamePrefix": "[parameters('vmName')]",
    "imagePublisher": "MicrosoftWindowsServer",
    "imageOffer": "WindowsServer",
    "imageSKU": "2012-R2-Datacenter",
    "vnetName": "qazureng",
    "vnetID": "[resourceId(parameters('existingVirtualNetworkResourceGroup'), 'Microsoft.Network/virtualNetworks', 'qazureng')]",
    "subnetRef": "[concat(variables('vnetID'),'/subnets/', parameters('subnetName'))]",
    "securityGroupName":"arm-deployment-nsg"
  },
  "resources": [
    {
      "apiVersion": "2015-05-01-preview",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[variables('nic1NamePrefix')]",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "NetworkInterface"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('subnetRef')]"
              }
            }
          }
        ],
        "networkSecurityGroup": {
          "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('securityGroupName'))]"
        }
      }
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('vmName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[concat('Microsoft.Network/networkInterfaces/', variables('nic1NamePrefix'))]",
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "osProfile": {
          "computername": "[parameters('vmName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('imagePublisher')]",
            "offer": "[variables('imageOffer')]",
            "sku": "[variables('imageSKU')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "pythonWindows",
            "vhd": {
              "uri": "[concat('http://','pythondeploy','.blob.core.windows.net/vhds/','pythonWindows', '.vhd')]"
            },
            "caching": "None",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "properties": {
                "primary": "true"
              },
              "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('nic1NamePrefix'))]"
            },
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": "true",
            "storageUri": "[concat('http://',parameters('storageAccountName'),'.blob.core.windows.net')]"
          }
        }
      },
       "resources": [
        {
          "name": "[concat(parameters('vmName'),'/BgInfo')]",
          "type": "Microsoft.Compute/virtualMachines/extensions",
          "location": "[resourceGroup().location]",
          "apiVersion": "2015-06-15",
          "dependsOn": [
            "[concat('Microsoft.Compute/virtualMachines/', parameters('vmName'))]"
          ],
          "properties": {
            "publisher": "Microsoft.Compute",
            "type": "BGInfo",
            "typeHandlerVersion": "2.1",
            "settings": {
              "properties": [ ]
            }
          }
        },
        {
          "type": "Microsoft.Compute/virtualMachines/extensions",
          "name": "[concat(parameters('vmName'),'/MyCustomScriptExtension')]",
          "apiVersion": "2015-05-01-preview",
          "location": "[resourceGroup().location]",
          "dependsOn": [
            "[concat('Microsoft.Compute/virtualMachines/', parameters('vmName'))]",
            "[concat('Microsoft.Compute/virtualMachines/', parameters('vmName'),'/extensions/BgInfo')]"
          ],
          "properties": {
            "publisher": "Microsoft.Compute",
            "type": "CustomScriptExtension",
            "typeHandlerVersion": "1.4",
            "settings": {
              "fileUris": "https://raw.githubusercontent.com/Xplendit/Stage/master/Scripts/Appserver/SetupAppServer.ps1"
              "commandToExecute": "powershell.exe -ExecutionPolicy Unrestricted -File SetupAppServer.ps1"
            }
          }
        },
      ]
    }
  ],
    }
